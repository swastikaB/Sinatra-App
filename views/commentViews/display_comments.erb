<%if(@comment.any?)%>
    <table class="infoTable">
        <th> Name </th>
        <th> Comment</th>
        <th>Posted on</th>
        <th></th>
        <% @comment.each do |each_comment| %>

            <tr>
                <td> 
                    <%= each_comment.name %>
                </td>
                <td>
                    <%= each_comment.description %> 
                </td> 
               <td>
               <% createdAtString = each_comment.created_at.strftime("%m/%d/%Y" + " at " + "%H:%M") if each_comment.created_at %>
               <%=createdAtString%>
               </td>
                <td>
                    <a class="button" href="/comments/<%= each_comment.id %>" title="view <%=each_comment.name%>'s comment"> View </a>
                </td>
            </tr>
        <% end %>
    </table>
<% else %>
    <h2>
        There are no records. You need to create a record
    </h2>
<% end %>
<br>
    <a class="button" href="/comments/create" title="Write a new Comment"> New Comment </a>

